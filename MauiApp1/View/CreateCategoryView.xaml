<?xml version="1.0" encoding="utf-8"?>

<view:BaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:MauiApp1.View"
             x:Class="MauiApp1.View.CreateCategoryView">
    <StackLayout>
        <Label Text="Create Category" FontSize="20" />
        
        <Entry Placeholder="Category Name"
               Text="{Binding Category.CategoryName}" />
        <Button Text="Create"
                Command="{Binding SaveCategoryCommand}" />
        
    </StackLayout>
    
</view:BaseView>