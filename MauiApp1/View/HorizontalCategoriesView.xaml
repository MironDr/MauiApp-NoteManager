<?xml version="1.0" encoding="utf-8"?>

<view:BaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:MauiApp1.View"
             x:Class="MauiApp1.View.HorizontalCategoriesView">
    <StackLayout>
        <CollectionView ItemsSource="{Binding Categories}" SelectionMode="None" Margin="0,10">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Category.Name}" Command="{Binding Command}" CommandParameter="{Binding .}" Style="{Binding Style}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</view:BaseView>